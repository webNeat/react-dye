{
  "name": "react-dye",
  "version": "3.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "check-format": "prettier --check src",
    "format": "prettier --write src",
    "test": "vitest run",
    "test-watch": "vitest",
    "build": "vite build",
    "release-snapshot": "pnpm changeset version --snapshot && changeset publish --tag snapshot",
    "release": "pnpm build && changeset publish"
  },
  "description": "A simple way to style React components",
  "author": "Amine Ben hammou <webneat@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/webneat/react-dye",
  "bugs": "https://github.com/webneat/react-dye/issues",
  "homepage": "https://github.com/webneat/react-dye#readme",
  "keywords": [
    "react",
    "library",
    "typescript",
    "css",
    "style",
    "classname",
    "ui-components"
  ],
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.13.4",
    "@types/react": "^19.0.10",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-v8": "^3.0.5",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.1",
    "react": "^19.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild"
    ]
  }
}
